<h3>Create New Answer:</h3>

<form>
  <div class="form-group">
    <label for="user">User Name:</label>
    {{input id="user" class="form-control" value=user}}
  </div>

  <div class="form-group">
    <label for="text">Answer Text:</label>
    {{textarea value=text id="text" class="form-control" rows="5"}}
  </div>

  <button class="btn btn-success" {{action "save"}}>Save</button>
</form>
