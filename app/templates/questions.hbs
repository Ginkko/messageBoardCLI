<h1>Questions</h1>


{{#if isCreatingQuestion}}
  <form>
    <div class="form-group">
      <label for="user">User Name:</label>
      {{input id="user" class="form-control" value=user}}
    </div>

    <div class="form-group">
      <label for="title">Title:</label>
      {{input id="title" class="form-control" value=title}}
    </div>

    <div class="form-group">
      <label for="text">Question Text:</label>
      {{textarea value=text id="text" class="form-control" rows="5"}}
    </div>

    <button class="btn btn-info" {{action "addQuestion"}}>Ask!</button>
  </form>
{{else}}
  <ul>
    {{#each model as |question|}}
      <li>{{#link-to 'question' question}}{{question.title}}{{/link-to}}</li>
    {{/each}}
  </ul>
  <button class="btn btn-info" {{action "newQuestion"}}>New Question</button>

{{/if}}
